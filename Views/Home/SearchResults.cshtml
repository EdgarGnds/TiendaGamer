@model IEnumerable<Product>
@{
    ViewData["Title"] = "Resultados de Búsqueda";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr />

    @if (string.IsNullOrEmpty(ViewData["CurrentQuery"]?.ToString()))
    {
        <h4 class="mb-3">Por favor, ingresa un término de búsqueda.</h4>
    }
    else
    {
        <h4 class="mb-3">Mostrando resultados para: "@ViewData["CurrentQuery"]"</h4>
    }

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var product in Model)
            {
                // ¡Reutilizamos nuestra tarjeta de producto!
                @await Html.PartialAsync("_ProductCard", product)
            }
        }
        else
        {
            <p class="text-center">No se encontraron productos que coincidan con tu búsqueda.</p>
        }
    </div>
</div>
