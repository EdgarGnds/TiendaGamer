@model IEnumerable<Product>
@{
    ViewData["Title"] = "Inicio";
}

<div class="container-fluid bg-dark text-white p-5 mb-5" style="background: url('https://www.cyberpowerpc.com/template/2022/page/HyperLiquid2/images/c1.jpg') no-repeat center center; background-size: cover;">
    <div class="col-md-6">
        <h1 class="display-4 fw-bold">La PC de Tus Sueños</h1>
        <p class="fs-4">Componentes de alta gama y equipos armados por expertos. Encuentra todo lo que necesitas para tu setup gamer.</p>
        <a href="#" class="btn btn-primary btn-lg">Ver Ofertas</a>
    </div>
</div>

<div class="container mb-5">
    <h2 class="text-center mb-4">Comprar por Categoría</h2>
    <div class="row g-4">

        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center p-4">
                    <i class="bi bi-pc-display h1"></i> <h3 class="card-title">PCs Armadas</h3>
                    <p class="card-text">Sistemas completos listos para jugar.</p>
                    <a asp-controller="Home" asp-action="PcsArmadas" class="btn btn-outline-primary mt-auto">Ver ahora</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center p-4">
                    <i class="bi bi-motherboard h1"></i>
                    <h3 class="card-title">Componentes</h3>
                    <p class="card-text">Actualiza tu equipo pieza por pieza.</p>
                    <a asp-controller="Home" asp-action="Componentes" class="btn btn-outline-primary mt-auto">Ver ahora</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center p-4">
                    <i class="bi bi-keyboard h1"></i>
                    <h3 class="card-title">Periféricos</h3>
                    <p class="card-text">Teclados, ratones y monitores.</p>
                    <a asp-controller="Home" asp-action="Perifericos" class="btn btn-outline-primary mt-auto">Ver ahora</a>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="container mb-5">

    <div id="promoCarousel" class="carousel slide carousel carousel-fixed-height" data-bs-ride="carousel">

        <div class="carousel-indicators">
            <button type="button" data-bs-target="#promoCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#promoCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#promoCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://assets2.razerzone.com/images/pnx.assets/93f63e2ce9f09b098adb63a8e14cb7eb/1200x630.jpg" class="d-block w-100" alt="Promoción 1">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="text-razer">RAZER</h2>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://resource.logitechg.com/w_1206,c_limit,q_auto,f_auto,dpr_1.0/d_transparent.gif/content/dam/gaming/en/ghub-update/2024-update/g-hub-tips-and-tricks-5.jpg?v=1" class="d-block w-100" alt="Promoción 2">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="text-logitech">LOGITECH</h2>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://mx-media.hptiendaenlinea.com/magefan_blog/502g03hz.png" class="d-block w-100" alt="Promoción 3">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="text-hyperx">HYPERX</h2>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#promoCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="container mb-5">
    <h2 class="text-center mb-4">Productos Destacados</h2>
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var product in Model)
            {
                // ¡Reutilizamos la tarjeta de producto que ya creamos!
                @await Html.PartialAsync("_ProductCard", product)
            }
        }
        else
        {
            <p class="text-center">No hay productos destacados disponibles en este momento.</p>
        }
    </div>
</div>
